<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Fap.Presentation.Window1"
	x:Name="Window"
	Title="Window1"
	Width="300" Height="75">

	<Grid x:Name="LayoutRoot">
		 <StackPanel Orientation="Horizontal"  Background="White" >
            <Image  VerticalAlignment="Top" Width="35" Height="35px" Source="/Fap.Presentation;component/Images/Default_Avatar.png" />
							<StackPanel>
								<Label Content="Kayomani" Padding="0,2,0,0" />
								<Label Content="{Binding Location}" Padding="0,2,0,0" />
							</StackPanel>
                            <Label Content="0 Bytes"  Padding="15,2,0,0"  />
                            <StackPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="View Shares" />
                                </ContextMenu>
                            </StackPanel.ContextMenu>
                        </StackPanel>
		</Grid>
</Window>